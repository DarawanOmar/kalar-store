model Products {
  id             Int      @id @default(autoincrement())
  name           String
  barcode        String
  sale_price     Int
  purchase_price Int
  quantity       Int
  note           String?
  image          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  Purchase_invoice_items Purchase_invoice_items[]
  Sale_invoice_items     Sale_invoice_items[]
}

enum Type_Sale_Purchase {
  Loan
  Cash
}

enum Status {
  Done
  Remain
}

model Purchase_invoice {
  id             Int                @id @default(autoincrement())
  invoice_number String
  name           String
  Status         Status
  type           Type_Sale_Purchase
  paid_amount    Float?
  place          String
  note           String?
  is_done        Boolean
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  Purchase_invoice_items Purchase_invoice_items[]
}

model Purchase_invoice_items {
  id Int @id @default(autoincrement())

  purchase_invoiceId Int?
  Purchase_invoice   Purchase_invoice? @relation(fields: [purchase_invoiceId], references: [id])

  Products   Products? @relation(fields: [product_id], references: [id])
  product_id Int?

  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Type_Sale_Purchase {
  loan
  cash
}

enum Status {
  done
  remain
}

model Sale_invoice {
  id               Int                @id @default(autoincrement())
  invoice_number   String
  name             String
  status           Status             @default(remain)
  type             Type_Sale_Purchase @default(cash)
  total_amount     Float?
  paid_amount      Float              @default(0)
  remaining_amount Float              @default(0)
  phone            String
  place            String
  is_done          Boolean            @default(false)
  note             String?
  is_discount      Boolean            @default(false)
  discount         Int?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  Sale_invoice_items Sale_invoice_items[]
  LoanPayments       LoanPayment[]
}

model Sale_invoice_items {
  id Int @id @default(autoincrement())

  Sale_invoice   Sale_invoice? @relation(fields: [sale_invoiceId], references: [id])
  sale_invoiceId Int?

  Products   Products? @relation(fields: [product_id], references: [id])
  product_id Int?
  loss       Boolean   @default(false)
  loss       Boolean   @default(false)
  quantity   Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model LoanPayment {
  id      Int      @id @default(autoincrement())
  amount  Float
  paid_at DateTime @default(now())
  note    String?

  Sale_invoice   Sale_invoice @relation(fields: [sale_invoiceId], references: [id])
  sale_invoiceId Int
}

model Expenses {
  id        Int      @id @default(autoincrement())
  name      String
  price     Int
  quantity  Int
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ActionType {
  withdraw
  deposit
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MainCash {
  id          Int        @id @default(autoincrement())
  name        String
  amount      Float
  last_amount Int
  type_action ActionType
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
}

model SubCash {
  id          Int        @id @default(autoincrement())
  name        String
  amount      Float
  last_amount Int
  type_action ActionType
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
}

model HistoryMainCash {
  id          Int        @id @default(autoincrement())
  user_email  String
  name        String
  amount      Float
  type_action ActionType
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
}

model HistorySubCash {
  id          Int        @id @default(autoincrement())
  user_email  String
  name        String
  amount      Float
  type_action ActionType
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
}
