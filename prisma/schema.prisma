generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id             Int      @id @default(autoincrement())
  name           String
  barcode        String
  sale_price     Int
  purchase_price Int
  quantity       Int
  note           String?
  image          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  Purchase_invoice_items Purchase_invoice_items[]
  Sale_invoice_items     Sale_invoice_items[]
}

enum Type_Sale_Purchase {
  Loan
  Cash
}

enum Status {
  Done
  Remain
}

model Purchase_invoice {
  id             Int                @id @default(autoincrement())
  invoice_number String
  name           String
  Status         Status
  type           Type_Sale_Purchase
  paid_amount    Float?
  place          String
  is_done        Boolean
  note           String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  Purchase_invoice_items Purchase_invoice_items[]
}

model Purchase_invoice_items {
  id Int @id @default(autoincrement())

  purchase_invoiceId Int?
  Purchase_invoice   Purchase_invoice? @relation(fields: [purchase_invoiceId], references: [id])

  Products   Products? @relation(fields: [product_id], references: [id])
  product_id Int?

  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sale_invoice {
  id                 Int                  @id @default(autoincrement())
  invoice_number     String
  name               String
  Status             Status
  type               Type_Sale_Purchase
  paid_amount        Float?
  phone              String
  place              String
  is_done            Boolean
  note               String?
  is_discount        Boolean              @default(false)
  discount           Int?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  Sale_invoice_items Sale_invoice_items[]
}

model Sale_invoice_items {
  id Int @id @default(autoincrement())

  Sale_invoice   Sale_invoice? @relation(fields: [sale_invoiceId], references: [id])
  sale_invoiceId Int?

  Products   Products? @relation(fields: [product_id], references: [id])
  product_id Int?
  loss       Boolean   @default(false)
  quantity   Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Expenses {
  id        Int      @id @default(autoincrement())
  name      String
  price     Int
  quantity  Int
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Business {
  id         String   @id @default(uuid())
  name       String
  amount     Float
  code       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model StaticBusiness {
  id         String   @id @default(uuid())
  name       String
  amount     Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
